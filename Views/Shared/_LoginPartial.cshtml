@if (User.Identity.IsAuthenticated)
{
<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">Hello, @User.Identity.Name!</a>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item text-danger">Logout</button>
                </form>
            </li>
        </ul>
    </li>
</ul>
}
else
{
<a class="btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
<a class="btn btn-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
}
