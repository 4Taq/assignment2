@model List<Event>

@{
    ViewData["Title"] = "Browse Events";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5">
                <i class="fas fa-calendar-alt text-primary"></i> Browse Events
            </h1>
            <p class="lead text-muted">Discover amazing events happening near you</p>
        </div>
        <div class="col-md-4 text-md-end">
            @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle"></i> Create Event
                </a>
            }
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group input-group-lg">
                <span class="input-group-text bg-white">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" 
                       id="searchBox" 
                       class="form-control" 
                       placeholder="Search events by name or category...">
            </div>
        </div>
        <div class="col-md-4">
            <select id="sortBy" class="form-select form-select-lg">
                <option value="date">Sort by Date</option>
                <option value="price">Sort by Price</option>
                <option value="name">Sort by Name</option>
            </select>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-info d-flex align-items-center">
                    <i class="fas fa-info-circle me-2"></i>
                    <span>
                        Showing <strong>@Model.Count</strong> event(s) | 
                        <strong>@Model.Count(e => e.Price == null || e.Price == 0)</strong> free events available
                    </span>
                </div>
            </div>
        </div>
    }

    <div id="loadingSpinner" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted">Searching events...</p>
    </div>

    <div id="eventsContainer">
        @await Html.PartialAsync("_EventCard", Model)
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-calendar-times text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">No Events Available</h3>
            <p class="text-muted">Check back later for new events!</p>
            
            @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                    <i class="fas fa-plus-circle"></i> Create Your First Event
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            let searchTimeout;
            
            $("#searchBox").on("keyup", function () {
                clearTimeout(searchTimeout);
                var query = $(this).val();
                
                $("#loadingSpinner").show();
                $("#eventsContainer").hide();
                
                searchTimeout = setTimeout(function() {
                    $.get("/Event/Search?q=" + encodeURIComponent(query), function (data) {
                        $("#eventsContainer").html(data).fadeIn();
                        $("#loadingSpinner").hide();
                    }).fail(function() {
                        $("#loadingSpinner").hide();
                        $("#eventsContainer").html(
                            '<div class="alert alert-danger">Error loading events. Please try again.</div>'
                        ).show();
                    });
                }, 300); // 300ms debounce
            });

            $("#sortBy").on("change", function() {
                var sortValue = $(this).val();
                console.log("Sorting by: " + sortValue);
            });
        });
    </script>
}