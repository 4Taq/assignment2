@model Event
@{
    ViewData["Title"] = "Event Details";
    var availableTickets = (int)ViewBag.AvailableTickets;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Model.Name</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-calendar text-primary"></i> Start Date
                        </dt>
                        <dd class="col-sm-8">
                            @Model.StartDate.ToString("dddd, MMMM dd, yyyy")
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-calendar-check text-primary"></i> End Date
                        </dt>
                        <dd class="col-sm-8">
                            @Model.EndDate.ToString("dddd, MMMM dd, yyyy")
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-tag text-primary"></i> Category
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Category?.Name</span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-user text-primary"></i> Organizer
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Organizer?.FullName
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-chair text-primary"></i> Total Capacity
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Capacity seats
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-ticket-alt text-primary"></i> Available Tickets
                        </dt>
                        <dd class="col-sm-8">
                            @if (availableTickets > 0)
                            {
                                <span class="badge bg-success">@availableTickets tickets available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">SOLD OUT</span>
                            }
                        </dd>

                        @if (Model.Price.HasValue)
                        {
                            <dt class="col-sm-4">
                                <i class="fas fa-dollar-sign text-primary"></i> Price
                            </dt>
                            <dd class="col-sm-8">
                                <h4 class="text-success mb-0">$@Model.Price.Value</h4>
                            </dd>
                        }
                        else
                        {
                            <dt class="col-sm-4">
                                <i class="fas fa-gift text-primary"></i> Price
                            </dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success">FREE EVENT</span>
                            </dd>
                        }
                    </dl>

                    @if (User.Identity.IsAuthenticated && 
                         (Model.OrganizerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value || 
                          User.IsInRole("Admin")))
                    {
                        <hr>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit Event
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Event
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Purchase Sidebar -->
        <div class="col-md-4">
            @if (User.Identity.IsAuthenticated)
            {
                @if (availableTickets > 0)
                {
                    <div class="card shadow-lg border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Purchase Tickets</h5>
                        </div>
                        <div class="card-body">
                            <form asp-controller="Purchase" asp-action="Create" method="get">
                                <input type="hidden" name="eventId" value="@Model.Id" />
                                
                                <div class="mb-3">
                                    <p class="text-center mb-2">
                                        <strong>Price per ticket:</strong>
                                    </p>
                                    <h3 class="text-center text-success">
                                        @if (Model.Price.HasValue)
                                        {
                                            <span>$@Model.Price.Value</span>
                                        }
                                        else
                                        {
                                            <span>FREE</span>
                                        }
                                    </h3>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-ticket-alt"></i> Buy Tickets
                                    </button>
                                </div>
                            </form>

                            <div class="alert alert-info mt-3 mb-0">
                                <small>
                                    <i class="fas fa-info-circle"></i> 
                                    Hurry! Only @availableTickets tickets left
                                </small>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card shadow-lg border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="fas fa-times-circle"></i> Sold Out</h5>
                        </div>
                        <div class="card-body text-center">
                            <i class="fas fa-frown text-danger" style="font-size: 3rem;"></i>
                            <p class="mt-3 mb-0">
                                This event is currently sold out. Check back later for cancellations.
                            </p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card shadow-lg border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-sign-in-alt"></i> Login Required</h5>
                    </div>
                    <div class="card-body text-center">
                        <p>Please login to purchase tickets</p>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg w-100 mb-2">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary w-100">
                            <i class="fas fa-user-plus"></i> Register
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to All Events
            </a>
        </div>
    </div>
</div>