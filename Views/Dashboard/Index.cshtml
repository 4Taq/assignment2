@model DashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container py-4">
    <h1 class="display-6 mb-4">Welcome back, <strong>@Model.User.FullName</strong>!</h1>

    <ul class="nav nav-pills mb-4" id="dashboardTab">
        <li class="nav-item"><a class="nav-link active" data-bs-toggle="pill" href="#tickets">My Tickets</a></li>
        <li class="nav-item"><a class="nav-link" data-bs-toggle="pill" href="#history">Purchase History</a></li>
        @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
        {
            <li class="nav-item"><a class="nav-link" data-bs-toggle="pill" href="#myevents">My Events</a></li>
        }
        <li class="nav-item"><a class="nav-link" data-bs-toggle="pill" href="#profile">Profile</a></li>
    </ul>

    <div class="tab-content">
        <!-- My Tickets -->
        <div class="tab-pane active" id="tickets">
            @foreach (var t in Model.MyTickets)
            {
                <div class="card mb-3">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5>@t.Event.Name</h5>
                            <p>@t.Event.StartDate:dddd, MMMM dd, yyyy</p>
                            @*<img src="data:image/png;base64,@(Context.GetQrCode(t.TicketCode))" width="120" />*@
                        </div>
                        <a asp-action="DownloadTicketPdf" asp-route-ticketId="@t.Id" class="btn btn-success">
                            Download PDF
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="tab-pane" id="history">
            @foreach (var o in Model.PurchaseHistory)
            {
                <div class="alert alert-info">
                    <strong>@o.Event.Name</strong> × @o.Quantity = <strong>$@o.TotalPrice</strong>
                    @if (!o.Rating.HasValue)
                    {
                        <form asp-action="RateOrder" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@o.Id" />
                            <select name="rating" class="form-select">
                                @for(int i=1;i<=5;i++) {<option>@i</option>}
                            </select>
                            <button class="btn btn-sm btn-outline-primary">Rate</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-success">@o.Rating Stars</span>
                    }
                </div>
            }
        </div>

        @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
        {
            <div class="tab-pane" id="myevents">
                <h4>Total Revenue: <strong class="text-success">$@Model.TotalRevenue</strong></h4>
                <div class="row">
                    @foreach (var e in Model.MyEvents)
                    {
                        <div class="col-md-4">
                            <div class="alert alert-primary">
                                <strong>@e.Name</strong><br />
                                Tickets Sold: @e.Tickets.Count
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="tab-pane" id="profile">
            <form asp-controller="Account" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <label>Full Name</label>
                        <input name="fullName" value="@Model.User.FullName" class="form-control" />
                        <label>Phone</label>
                        <input name="phone" value="@Model.User.PhoneNumber" class="form-control" />
                        <label>Profile Picture</label>
                        <input type="file" name="profilePic" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model.User.ProfilePicture))
                        {
                            <img src="@Model.User.ProfilePicture" class="img-thumbnail mt-2" style="max-height:200px" />
                        }
                        <button type="submit" class="btn btn-primary mt-3">Update Profile</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
